<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/email_btn_round"
    android:padding="20dp"
    android:layout_marginBottom="20dp">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/parent"
        android:layout_marginTop="@dimen/signup_text_margin_top"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="2dp"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/etQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfields_register_login"
            android:inputType="text"
            android:maxLines="3"
            android:hint="Question"
            android:drawableStart="@drawable/baseline_question_mark_24"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/parent"
        android:layout_marginTop="@dimen/signup_text_margin_top"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="2dp"
        android:layout_marginHorizontal="10dp">
        <EditText
            android:id="@+id/etOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfields_register_login"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Option 1"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/parent"
        android:layout_marginTop="@dimen/signup_text_margin_top"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="2dp"
        android:layout_marginHorizontal="10dp">
        <EditText
            android:id="@+id/etOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfields_register_login"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Option 2"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/parent"
        android:layout_marginTop="@dimen/signup_text_margin_top"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="2dp"
        android:layout_marginHorizontal="10dp">
        <EditText
            android:id="@+id/etOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfields_register_login"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Option 3"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/parent"
        android:layout_marginTop="@dimen/signup_text_margin_top"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="2dp"
        android:layout_marginHorizontal="10dp">
        <EditText
            android:id="@+id/etOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfields_register_login"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Option 4"
            android:drawableTint="@color/black"
            android:drawablePadding="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/parent"
        android:layout_marginTop="@dimen/signup_text_margin_top"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="2dp"
        android:layout_marginHorizontal="10dp">
        <EditText
            android:id="@+id/etAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfields_register_login"
            android:backgroundTint="#A7E362"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Answer"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>