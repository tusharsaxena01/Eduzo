<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_shape_bk"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:id="@+id/ivBack"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Quiz"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:textSize="32sp"
                android:textStyle="bold"
                />

        </RelativeLayout>
        <EditText
            android:id="@+id/question1EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter question 1"
            android:background="@drawable/email_btn_round"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:padding="20dp"/>

        <EditText
            android:id="@+id/option1_1EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/email_btn_round"
            android:layout_marginHorizontal="20dp"
            android:padding="20dp"
            android:layout_marginVertical="20dp"
            android:hint="Option 1" />

        <EditText
            android:id="@+id/option2_1EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:background="@drawable/email_btn_round"
            android:layout_marginHorizontal="20dp"
            android:padding="20dp"
            android:hint="Option 2" />

        <EditText
            android:id="@+id/option3_1EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:background="@drawable/email_btn_round"
            android:layout_marginHorizontal="20dp"
            android:padding="20dp"
            android:hint="Option 3" />

        <EditText
            android:id="@+id/option4_1EditText"
            android:layout_width="match_parent"
            android:background="@drawable/email_btn_round"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:hint="Option 4" />

        <EditText
            android:id="@+id/answer_1EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:background="@drawable/email_btn_round"
            android:layout_marginHorizontal="20dp"
            android:padding="20dp"
            android:hint="Enter the correct option (e.g., A, B, C, D)" />

        <!-- Repeat the above EditText fields for the other 4 questions (question 2 to 5) -->

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Submit" />

    </LinearLayout>
</ScrollView>
