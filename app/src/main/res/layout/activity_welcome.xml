<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.WelcomeActivity"
        android:background="#f4f4f4">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:backgroundTint="#CAE7FE"
            android:backgroundTintMode="src_over"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:flow_horizontalAlign="start"
            android:layout_margin="10dp"
            android:id="@+id/fabBack"
            app:fabSize="mini"
            app:fabCustomSize="40dp"
            android:elevation="0dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/tvHeading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1.5"
            android:id="@+id/ivStudents"
            >
            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/study_tablet_image"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:text="Get Started with Education Zone"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textAlignment="gravity"
            android:autoSizeTextType="uniform"
            app:flow_horizontalAlign="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tvSlogan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivStudents" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSlogan"
            android:text="Education on your fingertips."
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/tvHeading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnGoogle"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnGoogle"
            android:text="Login with Google"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/google_btn_round"
            android:paddingHorizontal="30dp"
            android:paddingVertical="18dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvSlogan"
            app:layout_constraintBottom_toTopOf="@id/btnEmail"
            android:drawableStart="@drawable/google_logo"
            android:drawableTint="#66FFFFFF"
            android:drawableTintMode="src_atop"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="20sp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnEmail"
            android:text="Login with Email"
            android:paddingHorizontal="30dp"
            android:paddingVertical="18dp"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/dark_grey"
            android:background="@drawable/email_btn_round"
            app:layout_constraintTop_toBottomOf="@id/btnGoogle"
            app:layout_constraintVertical_weight="1"
            android:drawableStart="@drawable/email"
            app:layout_constraintBottom_toTopOf="@id/llLogin"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llLogin"
            app:layout_constraintTop_toBottomOf="@id/btnEmail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have account? "
                android:textSize="15sp"
                android:textColor="@color/grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLogin"
                android:text="@string/login_link_text"
                android:textColor="#009cff"
                android:textSize="15sp"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>